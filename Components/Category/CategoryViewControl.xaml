<UserControl x:Class="KlioDesktopApp.Components.Category.CategoryViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlioDesktopApp.Components.Category"
             mc:Ignorable="d" >
    <Button x:Name="btnCategory" Background="Transparent" BorderBrush="Transparent">
        <Border x:Name="cBorder" CornerRadius="5" 
        Background="#FEFEFE" Height="30" Margin="5 0 5 0">
            <StackPanel Orientation="Horizontal">
                <Path Data="{DynamicResource timer}"
              Fill="{DynamicResource GroupBorderColor}"
              VerticalAlignment="Center"/>
                <Label x:Name="LbCategory" HorizontalAlignment="Center" 
               VerticalAlignment="Center" Content="Signature" Foreground="#464646"
               Margin="0 2 0 0"
               FontFamily="Bahnschrift SemiBold"/>
            </StackPanel>
        </Border>
    </Button>
</UserControl>
